#include<iostream>
using namespace std;
int main ()
{
   int arr[10], n, i, max, min, total, average;
   n = 10;
    
   cout << "Enter 10 integers: \n";
    
   for (i = 0; i < n; i++)
   cin >> arr[i];
        
    max = arr[0];
    for (i = 0; i < n; i++)
    {
        if (max < arr[i])
            max = arr[i];
    }
    
    min = arr[0];
    for (i = 0; i < n; i++)
    {
        if (min > arr[i])
            min = arr[i];
    }
    
    total = arr[0];
    for (i = 0; i < n; i++)
    {
	  	  total += arr[i];
	  }
	
  	average = arr[0];
	  for (i = 0; i < i; i++)
	  {
	    	average = total/10;
  	}
	
	  cout << "\n";
    cout << "Largest integer: " << max << "\n";
    cout << "Smallest integer: " << min << "\n";
    cout << "Total: " << total << "\n";
    cout << "Average: " << average << endl;
    
    return 0;
}
